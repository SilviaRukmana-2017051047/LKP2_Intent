<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Activity2">

    <TextView
        android:id="@+id/text_view_numbers1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilangan A : "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/text_view_numbers2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bilangan B : "
        android:textSize="30sp" />

    <Button
        android:id="@+id/button_tambah"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="penjumlahan" />

    <Button
        android:id="@+id/button_kurang"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="pengurangan" />

    <Button
        android:id="@+id/button_kali"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="perkalian" />

    <Button
        android:id="@+id/button_bagi"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="pembagian" />

</LinearLayout>